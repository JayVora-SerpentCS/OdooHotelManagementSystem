<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<!--Template for hotel reservation -->

<template id="report_checkout_qweb">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="report.external_layout">
                <div class="page">
                    <t t-name="report.external_layout_header">
                        <div class="header">
                            <div class="row">
                                <div class="col-xs-3">
                                    <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 45px;"/>
                                </div>
                                <div class="col-xs-9 text-right" style="margin-top:20px;" t-field="company.rml_header1"/>
                            </div>
                            <div class="row zero_min_height">
                                <div class="col-xs-12">
                                    <div style="border-bottom: 1px solid black;"></div>
                                </div>
                            </div>
                        </div>
                    </t>
                    <div class="row">
                        <h2>
                            <span><center>Check-Out Guest List</center></span>
                        </h2>
                    </div>
                    <div class="row mt32 mb32">
                        <div class="text-center">
                            <strong>From:</strong>
                            <font t-esc="formatLang(data['form']['date_start'],date=True)"/>
                            <strong>To:</strong>
                            <font t-esc="formatLang(data['form']['date_end'],date=True)"/>
                        </div>
                    </div>
                    <table class="table table-condensed">
                        <tr>
                            <td><strong>#No</strong></td>
                            <td><strong>Guest Name</strong></td>
                            <td><strong>Check-Out Date</strong></td>
                            <td><strong>Room Type</strong></td>
                            <td><strong>Room No</strong></td>
                        </tr>
                        <tr t-foreach="get_checkin(data['form']['date_start'],data['form']['date_end'])" t-as="info">
                            <td><span t-field="info.reservation_no"/></td>
                            <td><span t-field="info.partner_id.name"/></td>
                            <td><span t-field="info.checkout"/></td>
                            <td><span t-esc="get_room_type(info.reservation_line)"/></td>
                            <td><span t-esc="get_room_nos(info.reservation_line)"/></td>
                        </tr>
                     </table>
                </div>
            </t>
        </t>
       </t> 
    </template>
</data>
</openerp>