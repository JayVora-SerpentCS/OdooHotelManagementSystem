                                </a>
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open">
                                            <t t-if="record.code.raw_value">
                                                [
                                                <field name="code"/>
                                                ]
                                            </t>
                                            <field name="name"/>
                                        </a>
                                    </h4>
                                    <div name="tags"/>
                                    <ul>
                                        <li>
                                            Price:
                                            <field name="lst_price"></field>
                                        </li>
                                        <li>
                                            Category:
                                            <field name="categ_id"></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
